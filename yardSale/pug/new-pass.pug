extends ./components/templates.pug

block content
  .main-container
    section.new-pass
      //- Logo
      figure.new-pass__logo
        img(src="", alt="Logo de yard sale")
      //- Titles
      h1.new-pass__title Create a new password
      p.new-pass__sub-title Enter a new password for you acount 
      //- Forms
      form.new-pass__form
        label.labels(for="password") Password 
        input.inputs(type="text" id="password" placeholder="******")

        label.labels(for="new-password") Re-enter password 
        input.inputs(type="text" id="new-password" placeholder="******")

        input.button.button--new-pass(type="submit" value="Confirm") 
